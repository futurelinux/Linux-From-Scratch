# description	: Protocol definitions and daemon for D-Bus at-spi
# depends	: dbus glib2 

name=at-spi2-core
version=2.38.0
release=1

source="https://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd    build

	meson --prefix=/usr ..
	ninja

	DESTDIR=$PKG ninja install
}
