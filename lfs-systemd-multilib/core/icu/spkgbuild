# description	: International Components for Unicode library
# depends	: 

name=icu
version=68.2
release=1

source="http://github.com/unicode-org/icu/releases/download/release-${version/./-}/${name}4c-${version/./_}-src.tgz"

build() {
	cd $name-$version

	./configure --prefix=/usr

	make

	make DESTDIR=$PKG install
}
