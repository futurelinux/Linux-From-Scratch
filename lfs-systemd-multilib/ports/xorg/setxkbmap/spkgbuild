# description   : Set the keyboard using the X Keyboard Extension
# depends       : libxkbfile libx11
    
name=setxkbmap
version=1.3.2
release=1

source="https://www.x.org/pub/individual/app/$name-$version.tar.bz2"

build() {

	cd $name-$version

	./configure --prefix=/usr           \
	            --sysconfdir=/etc       \
	            --localstatedir=/var    \
	            --disable-static

	make
    
	make DESTDIR=$PKG install
}
