# description   : Small commandline tool to configure devices
# depends       : libx11 libxext libxi libxrandr libxinerama
    
name=xinput
version=1.6.3
release=1

source="https://www.x.org/pub/individual/app/$name-$version.tar.bz2"

build() {

	cd $name-$version

	./configure --prefix=/usr           \
	            --sysconfdir=/etc       \
	            --localstatedir=/var    \
	            --disable-static

	make
    
	make DESTDIR=$PKG install
}
