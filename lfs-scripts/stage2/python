#!/bin/bash
set -e


TMP=${TMP:-/tmp}
LOG=${LOG:-$HOME/logs/stage2}
SRC=${SRC:-$/sources}

name=python
version=3.9.1

rm -fr $TMP
mkdir -p $TMP $LOG

tar xf $SRC/Python-$version.tar.xz -C $TMP

{ time \
   {

    cd $TMP/Python-$version

	./configure --prefix=/usr   \
	            --enable-shared \
	            --without-ensurepip

    make
    
    make install
    
    }
} 2>&1 | tee $name.log

[ $PIPESTATUS = 0 ] && mv $name.log $LOG || exit $PIPESTATUS

rm -fr $TMP
