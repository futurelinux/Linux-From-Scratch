#!/bin/bash -e


TMP=${TMP:-$(mktemp -d)}
LOG=${LOG:-$(dirname $0)/log}
SRC=${SRC:-/home/sources}

pkgbase=Expat-2.2.9
pkgname=expat
pkgver=2.2.9

rm -fr $TMP
mkdir -p $TMP $LOG $SRC $(dirname $0)/build

tar xf $SRC/$pkgname-$pkgver.tar.xz -C $TMP

{ time \
   {

    cd $TMP/$pkgname-$pkgver
    
    sed -i 's:usr/bin/env :bin/:' run.sh.in
    
    ./configure --prefix=/usr    \
                --disable-static \
                --docdir=/usr/share/doc/$pkgname-$pkgver
    
    make
    
    make install
    
    install -v -m644 doc/*.{html,png,css} /usr/share/doc/$pkgname-$pkgver

    }
} 2>&1 | tee $LOG/$pkgbase.log
    
[ $PIPESTATUS = 0 ] && echo "$pkgname-$pkgver" > $(dirname $0)/build/$pkgbase || exit $PIPESTATUS

rm -fr $TMP
