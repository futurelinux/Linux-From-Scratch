#!/bin/bash -e


TMP=${TMP:-$(mktemp -d)}
LOG=${LOG:-$(dirname $0)/log}
SRC=${SRC:-/home/sources/lfs}

pkgbase=Python-3.8.3
pkgname=Python
pkgver=3.8.3

rm -fr $TMP
mkdir -p $TMP $LOG $SRC $(dirname $0)/build

tar xf $SRC/$pkgname-$pkgver.tar.xz -C $TMP

{ time \
   {

    cd $TMP/$pkgname-$pkgver
    
    ./configure --prefix=/usr       \
                --enable-shared     \
                --with-system-expat \
                --with-system-ffi   \
                --with-ensurepip=yes
    
    make
    
    make install
    chmod -v 755 /usr/lib/libpython${pkgver:0:3}.so
    chmod -v 755 /usr/lib/libpython3.so
    ln -sfv pip${pkgver:0:3} /usr/bin/pip3

    install -v -dm755 /usr/share/doc/python-$pkgver/html 

    tar --strip-components=1  \
        --no-same-owner       \
        --no-same-permissions \
        -C /usr/share/doc/python-$pkgver/html \
        -xvf $SRC/python-$pkgver-docs-html.tar.bz2

    }
} 2>&1 | tee $LOG/$pkgbase.log
    
[ $PIPESTATUS = 0 ] && echo "$pkgname-$pkgver" > $(dirname $0)/build/$pkgbase || exit $PIPESTATUS

rm -fr $TMP
