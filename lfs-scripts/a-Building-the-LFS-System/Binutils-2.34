#!/bin/bash -e


TMP=${TMP:-$(mktemp -d)}
LOG=${LOG:-$(dirname $0)/log}
SRC=${SRC:-/home/sources}

pkgbase=Binutils-2.34
pkgname=binutils
pkgver=2.34

rm -fr $TMP
mkdir -p $TMP $LOG $SRC $(dirname $0)/build

tar xf $SRC/$pkgname-$pkgver.tar.xz -C $TMP

{ time \
   {

    cd $TMP/$pkgname-$pkgver
    
    expect -c "spawn ls"

    sed -i '/@\tincremental_copy/d' gold/testsuite/Makefile.in
    patch -Np1 -i $SRC/$pkgname-$pkgver-gcc10_gold_test_fix-1.patch

    mkdir -v build
    cd       build

    ../configure --prefix=/usr   \
             --enable-gold       \
             --enable-ld=default \
             --enable-plugins    \
             --enable-shared     \
             --disable-werror    \
             --enable-64-bit-bfd \
             --with-system-zlib
    
    make tooldir=/usr

    make tooldir=/usr install

    }
} 2>&1 | tee $LOG/$pkgbase.log
    
[ $PIPESTATUS = 0 ] && echo "$pkgname-$pkgver" > $(dirname $0)/build/$pkgbase || exit $PIPESTATUS

rm -fr $TMP
