#!/bin/bash -e


TMP=${TMP:-$(mktemp -d)}
LOG=${LOG:-$(dirname $0)/log}
SRC=${SRC:-/home/sources}

pkgbase=Bash-5.0
pkgname=bash
pkgver=5.0

rm -fr $TMP
mkdir -p $TMP $LOG $SRC $(dirname $0)/build

tar xf $SRC/$pkgname-$pkgver.tar.gz -C $TMP

{ time \
   {

    cd $TMP/$pkgname-$pkgver
    
    patch -Np1 -i $SRC/$pkgname-$pkgver-upstream_fixes-1.patch
    
    ./configure --prefix=/usr                    \
                --docdir=/usr/share/doc/$pkgname-$pkgver \
                --without-bash-malloc            \
                --with-installed-readline
    
    make
    
    make install
    mv -vf /usr/bin/bash /bin

    }
} 2>&1 | tee $LOG/$pkgbase.log
    
[ $PIPESTATUS = 0 ] && echo "$pkgname-$pkgver" > $(dirname $0)/build/$pkgbase || exit $PIPESTATUS

rm -fr $TMP
