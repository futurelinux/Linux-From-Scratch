#!/bin/bash 
set -e
 
TMP=${TMP:-/tmp/build}
LOG=${LOG:-$(dirname $0)/log}
SRC=${SRC:-/home/blfs-sources}
 
name=linux-firmware
version=20200619
 
rm -fr $TMP
mkdir -p $TMP $LOG $SRC
 
tar xf $SRC/$name-$version.tar.* -C $TMP
 
{ time \
   {
 
    cd $TMP/$name-$version

    make FIRMWAREDIR=lib/firmware install

    }   
} 2>&1 | tee $LOG/$name.log
    
[ $PIPESTATUS = 0 ] && echo "$name-$version" > $(dirname $0)/build/$name || exit $PIPESTATUS

rm -fr $TMP	
	

